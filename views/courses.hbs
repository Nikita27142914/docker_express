<h1>Курсы</h1>
<br />
<br />

{{#if courses.length}}
    {{#each courses}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-image">
                        <img style="height: 30vh" src={{img}} alt={{title}}>
                    </div>
                    <div class="card-content">
                        <h2 class="card-title">{{title}}</h2>
                        <p>{{description}}</p>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action">
                        <a href="/courses/{{id}}">Открыть курс</a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Курсов пока нет</p>
{{/if}}